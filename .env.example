# Ethereum Network Configuration
ETH_HTTP_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_API_KEY
ETH_WS_RPC_URL=wss://mainnet.infura.io/ws/v3/YOUR_INFURA_API_KEY
CHAIN_ID=1

# Wallet Configuration
PRIVATE_KEY=your_private_key_here_without_0x_prefix

# Gas Configuration
GAS_PRICE_GWEI=30
MAX_GAS_LIMIT=500000

# Flash Loan Contract (Deploy contract first, then add address here)
FLASHLOAN_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# Arbitrage Configuration
MIN_PROFIT_USD=50.0
MAX_SLIPPAGE_PERCENT=0.5
MAX_LOAN_AMOUNT_ETH=100.0

# Bot Configuration
SCAN_INTERVAL_MS=1000
MAX_CONCURRENT_TRADES=3
ENABLE_MEV_PROTECTION=true

# API Keys (Optional)
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Test Network Configuration (for testing)
GOERLI_RPC_URL=https://goerli.infura.io/v3/YOUR_INFURA_API_KEY
