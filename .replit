packages = ["cargo"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Rust Arbitrage Bot"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "rust_build"

[[workflows.workflow]]
name = "Rust Arbitrage Bot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cargo run"

[[workflows.workflow]]
name = "rust_build"
author = "agent"

[[workflows.workflow.tasks]]
